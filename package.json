{
    "name": "@candlefw/css",
    "version": "0.2.2",
    "type": "module",
    "description": "CSS Parser",
    "main": "./build/library/css.js",
    "types": "./build/types/css.d.ts",
    "scripts": {
        "test": "cfw.test ./test/candlefw.css.spec.js",
        "test.watch": "cfw.test -w ./test/candlefw.css.spec.js",
        "build": "rollup --config ./source/config/rollup.config.js",
        "build.watch": "rollup --config  ./source/config/rollup.config.js --watch",
        "compile": "hydrocarbon compile --parser glalr  -u -o ./source/typescript/parser -t module ./source/grammar/css.hcg",
        "compile.mount": "hydrocarbon compile --parser glalr -d -m ./source/grammar/css.hcg"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/candlefw/css.git"
    },
    "keywords": [
        "CSS",
        "Parser"
    ],
    "author": "Anthony Weathersby",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/candlefw/css/issues"
    },
    "homepage": "https://github.com/candlefw/css#readme",
    "dependencies": {
        "@candlefw/conflagrate": "^0.1.0",
        "@candlefw/hydrocarbon": "^0.4.0-dev"
    },
    "devDependencies": {
        "@candlefw/test": "0.1.0-alpha",
        "rollup": "latest",
        "rollup-plugin-commonjs": "latest",
        "rollup-plugin-node-resolve": "latest",
        "rollup-plugin-resolve": "latest"
    },
    "jshintConfig": {
        "esversion": 6,
        "unused": true
    }
}