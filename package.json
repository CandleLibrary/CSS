{
    "name": "@candlefw/css",
    "version": "0.2.5",
    "type": "module",
    "description": "CSS Management Tools",
    "main": "./build/library/css.js",
    "types": "./build/types/css.d.ts",
    "scripts": {
        "prepublishOnly": "tsc -p ./tsconfig.json && yarn test",
        "test": "cfw.test ./test/**",
        "test.watch": "cfw.test -w ./test/**",
        "compile": "hydrocarbon compile --parser glalr  -u -o ./source/typescript/parser -t module ./source/grammar/css.hcg",
        "compile.mount": "hydrocarbon compile --parser glalr -d -e ./build/library/parser/env.js -m ./source/grammar/css.hcg ",
        "compile.test": "hydrocarbon compile --parser glalr -d  ./source/grammar/css.hcg"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/candlefw/css.git"
    },
    "keywords": [
        "CSS",
        "Parser"
    ],
    "author": "Anthony Weathersby",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/candlefw/css/issues"
    },
    "homepage": "https://github.com/candlefw/css#readme",
    "dependencies": {
        "@candlefw/conflagrate": "*",
        "@candlefw/hydrocarbon": "*"
    },
    "devDependencies": {
        "@candlefw/test": "*",
        "chai": "4.2.0"
    },
    "jshintConfig": {
        "esversion": 6,
        "unused": true
    }
}